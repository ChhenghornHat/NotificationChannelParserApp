            <div class="text-body mb-2 mb-md-0">
                © <script>
                    document.write(new Date().getFullYear())
                </script>
                <span>@TempData.Peek("companyLicense")</span>
            </div>
            <div class="d-none d-lg-inline-block">
                <span class="text-body">Design and Develop by</span>
                <a href="@TempData.Peek("authorUrl")" target="_blank" class="footer-link d-none d-sm-inline-block">@TempData.Peek("authorName")</a>
            </div>
        </div>
    </div>
